{
  "$schema": "appsettings-schema.json",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    }
  },
  "ConnectionStrings": {
    "umbracoDbDSN": "Server=YOUR_SERVER;Database=TheSiliconPost;User Id=YOUR_USER;Password=YOUR_PASSWORD;TrustServerCertificate=True"
  },
  "SiteSettings": {
    "Url": "https://thesiliconpost.com",
    "Name": "The Silicon Post",
    "Description": "Tech blog covering AI, Cloud, .NET, and modern software development"
  },
  "Umbraco": {
    "CMS": {
      "Global": {
        "Id": "2bc7b2fc-e752-4090-99f2-33ed41f67f02",
        "SanitizeTinyMce": true
      },
      "Content": {
        "AllowEditInvariantFromNonDefault": true,
        "ContentVersionCleanupPolicy": {
          "EnableCleanup": true,
          "KeepAllVersionsNewerThanDays": 7,
          "KeepLatestVersionPerDayForDays": 90
        }
      },
      "Hosting": {
        "Debug": false
      },
      "Security": {
        "AllowConcurrentLogins": false,
        "AuthCookieDomain": "",
        "AuthCookieName": "UMB_UCONTEXT",
        "KeepUserLoggedIn": false,
        "UsernameIsEmail": true
      },
      "Unattended": {
        "UpgradeUnattended": true
      }
    }
  },
  "AllowedHosts": "thesiliconpost.com,www.thesiliconpost.com"
}
